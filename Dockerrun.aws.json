{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "hermaze/multi-client",
      "hostname": "client",
      "essential": "false"
    },
    {
      "name": "server",
      "image": "hermaze/multi-server",
      "hostname": "api",
      "essential": "false"
    },
    {
      "name": "worker",
      "image": "hermaze/multi-worker",
      "hostname": "worker",
      "essential": "false"
    },
    {
      "name": "nginx",
      "image": "hermaze/multi-nginx",
      "hostname": "nginx",
      "essential": "true",
      "portMappings": [
        { 
          "hostPort": 80,
          "containerPort": 80
        } 
      ],
      "links": ["client", "server"]
    }
  ]
}